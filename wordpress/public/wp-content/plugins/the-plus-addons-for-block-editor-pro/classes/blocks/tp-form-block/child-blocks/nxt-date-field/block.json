{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "tpgb/tp-form-date-field",
	"version": "0.1.0",
	"title": "Pick a Date",
	"category": "tpgb",
	"description": "Include a calendar-based date picker in your form.",
	"example": {
		"attributes": {}
	},
	"supports": {
		"anchor": true,
		"align": ["wide", "full"]
	},
	"textdomain": "tpgb",
	"ancestor": ["tpgb/tp-form-block"],
	"attributes": {
		"block_id": {
			"type": "string",
			"default": ""
		},
		"labelss": {
			"type": "string",
			"default": "Date"
		},
		"hlpTxt": {
			"type": "boolean",
			"default": false
		},
		"desctxt": {
			"type": "string",
			"default": "Description"
		},
		"reqTgl": {
			"type": "boolean",
			"default": false
		},
		"descPoss": {
			"type": "string",
			"default": "top"
		},
		"placeholder": {
			"type": "string",
			"default": "Date"
		},
		"valDate": {
			"type": "boolean",
			"default": false
		},
		"minYear": {
			"type": "number",
			"default": 1965
		},
		"minDay": {
			"type": "number",
			"default": 1
		},
		"minMonth": {
			"type": "number",
			"default": 1
		},
		"maxYear": {
			"type": "number",
			"default": 2085
		},
		"maxDay": {
			"type": "number",
			"default": 30
		},
		"maxMonth": {
			"type": "number",
			"default": 12
		},
		"inpSz": {
			"type": "object",
			"default": {
				"md": "100",
				"unit": "%"
			},
			"style": [
				{
                    "selector": "{{PLUS_CLIENT_ID}} {margin:0; width: {{inpSz}}; } {{PLUS_CLIENT_ID}}[data-type='tpgb/tp-form-date-field'].nxt-date-field {width:100%} {{PLUS_CLIENT_ID}}~.block-editor-block-list__block.wp-block:has(.nxt-btn-inline) {flex: 0; }",
					"backend": true
				},
				{
					"selector": "{{PLUS_WRAP}}.nxt-date-field {width: {{inpSz}}; } {{PLUS_WRAP}}~.nxt-submit-button.nxt-btn-inline{flex: 0;}",
					"backend": false
				}
			]
		},
		"error": {
			"type": "string",
			"default": "This field is required."
		},
        "uniqueid": {
			"type": "string",
			"default": ""
		}
	}
}
