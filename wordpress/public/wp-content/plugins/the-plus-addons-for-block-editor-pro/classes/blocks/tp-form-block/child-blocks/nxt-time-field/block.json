{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "tpgb/tp-form-time-field",
	"version": "0.1.0",
	"title": "Pick a Time",
	"category": "tpgb",
	"description": "Include a Clock-based time picker in your form.",
	"example": {
		"attributes": {}
	},
	"supports": {
		"anchor": true,
		"align": ["wide", "full"]
	},
	"textdomain": "tpgb",
	"ancestor": ["tpgb/tp-form-block"],
	"attributes": {
		"block_id": {
			"type": "string",
			"default": ""
		},
		"labelss": {
			"type": "string",
			"default": "Time"
		},
		"reqTgl": {
			"type": "boolean",
			"default": false
		},
		"placeholder": {
			"type": "string",
			"default": "Time"
		},
		"inpSz": {
			"type": "object",
			"default": {
				"md": "100",
				"unit": "%"
			},
			"style": [
				{
					"selector": "{{PLUS_CLIENT_ID}} {margin:0; width: {{inpSz}}; } {{PLUS_CLIENT_ID}}[data-type='tpgb/tp-form-time-field'].nxt-time-field{width:100%}  {{PLUS_CLIENT_ID}}~.block-editor-block-list__block.wp-block:has(.nxt-btn-inline) {flex: 0; margin-bottom:3px !important;} ",
					"backend": true
				},
				{
					"selector": "{{PLUS_WRAP}}.nxt-time-field {width: {{inpSz}}; } {{PLUS_WRAP}}~.nxt-submit-button.nxt-btn-inline{flex: 0;}",
					"backend": false
				}
			]
		},
		"hlpTxt": {
			"type": "boolean",
			"default": false
		},
		"desctxt": {
			"type": "string",
			"default": "Description"
		},
		"descPoss": {
			"type": "string",
			"default": "top"
		},
		"error": {
			"type": "string",
			"default": "This field is required."
		},
        "uniqueid": {
			"type": "string",
			"default": ""
		}
	}
}
